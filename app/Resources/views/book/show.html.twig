{% extends 'base.html.twig' %}

{% block body %}
    <h1>Book</h1>
    <div class="table-responsive">
        <table class="record_properties table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ book.name }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>Language</th>
                <td>{{ book.language }}</td>
            </tr>
            <tr>
                <th>Publisher</th>
                <td>{{ book.publisher }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ book.summary }}</td>
            </tr>
            </tbody>
        </table>
    </div>
<br>

    <div class="row">
        <div class="col-md-1">
            <a class="btn btn-primary btn-lg" href="{{ path('book_edit', { 'id': book.id }) }}" rold="button">
                Edit
            </a>
        </div>
        <div class="col-md-2">
            <a class="btn btn-primary btn-lg" href="{{ path('book_index') }}" role="button">
                Back to the list
            </a>
        </div>
        <div class="col-md-2">
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-primary btn-lg">
            {{ form_end(delete_form) }}
        </div>
        <div class="col-md-7"></div>




    </div>




{% endblock %}
