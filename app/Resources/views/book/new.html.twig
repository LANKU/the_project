{% extends 'base.html.twig' %}

{% block body -%}
    <h1>Book creation</h1>
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.author, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.language, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">

        {{ form_row(form.publisher, {'attr': {'class': 'form-control'}}) }}

    </div>
    <div class="form-group">

        {{ form_row(form.summary, {'attr': {'class': 'form-control'}}) }}
    </div>

    <br>
    <div class="row">
        <div class="col-md-1">
            <input type="submit" value="Create" class="btn btn-primary btn-lg"/>
            {{  form_end(form) }}
        </div>
        <div class="col-md-2">
            <a class="btn btn-primary btn-lg" href="{{ path('book_index') }}" role="button">
                Back to the list
            </a>
        </div>
        <div class="col-md-9"></div>




    </div>

{% endblock %}